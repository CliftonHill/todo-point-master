<%- include("partials/header"); -%>
<header>
<h1>Todo Point Master <i class="fas fa-gamepad"></i></h1>

<h2 class="headline">Make Getting Things Done FUN!</h2>
  </header>

<main>
  <div class="container">
    <div class="row">
      <div class="col-6 col-md-3">
        <div class="card marketing-cards">
          <div class="card-header marketing-card-header">
            <h5 class="card-title marketing-card-title">Zap!</h5>
            </div>
          <div class="card-body marketing-card-body">
            <p class="card-text">
              Gamify your Todo list with Points
              </p>
            </div>
          </div>
        </div>

        <div class="col-6 col-md-3">
          <div class="card marketing-cards">
            <div class="card-header marketing-card-header">
              <h5 class="card-title marketing-card-title">Bam!</h5>
              </div>
            <div class="card-body marketing-card-body">
              <p class="card-text">
                Track Work AND Personal tasks
                </p>
              </div>
            </div>
          </div>

          <div class="col-6 col-md-3">
            <div class="card marketing-cards">
              <div class="card-header marketing-card-header">
                <h5 class="card-title marketing-card-title">Wow!</h5>
                </div>
              <div class="card-body marketing-card-body">
                <p class="card-text">
                  Search, Edit, Assign Due Dates
                  </p>
                </div>
              </div>
            </div>

            <div class="col-6 col-md-3">
              <div class="card marketing-cards">
                <div class="card-header marketing-card-header">
                  <h5 class="card-title marketing-card-title">Ooooo...</h5>
                  </div>
                <div class="card-body marketing-card-body">
                  <p class="card-text">
                    Colored Highlights remind about priorities
                    </p>
                  </div>
                </div>
              </div>

      </div>


    </div>

  <div class="card" id="log-in-form">
    <div class="card-header">
      <h4>Log-In</h4> / <a href="#" id="register-button">Register</a>
    </div>
    <div class="card-body">
      <form action="/login" method="POST">
        <div class="form-group">
          <p class="login-problem">
            <%=loginProblem%>
            </p>
            <p class="sample">
              Sample login email to test: elon@ymail.com<br />
              Password: 12345678
              </p>
            <label>Email: <input type="email" class="form-control" name="email" placeholder="you@email.com" required/></label>
          </div>

        <div class="form-group">
                <label>Password: <input type="password" class="form-control" name="password" minlength="8" maxlength="20" required/></label>
          </div>
          <button type="submit" class="btn btn-primary" name="button">Submit</button>

        </form>

      </div>

  </div>

  <div class="card hide" id="register-form" >
    <div class="card-header">
      <h4>Register</h4> / <a href="#" id="log-in-button">Log-In</a>
    </div>
    <div class="card-body">
      <form action="/register" method="POST">
        <div class="form-group">
          <p class="registration-problem">
            <%=regProblem%>
            </p>
            <label>Name: <input type="text" class="form-control" name="name" placeholder="&quot;Elon&quot; (or) &quot;Elon Musk&quot;" required/></label>
        </div>
        <div class="form-group">
            <label>Email: <input type="email" class="form-control" name="email" placeholder="you@email.com" required/></label>
          </div>

        <div class="form-group">
                <label>Password: <input type="password" class="form-control" name="password" minlength="8" maxlength="20" required/></label>
          </div>
          <button type="submit" class="btn btn-primary" name="button">Submit</button>

        </form>

      </div>

  </div>

</main>




<%- include("partials/footer"); -%>
